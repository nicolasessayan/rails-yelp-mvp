<br>
<%= link_to "Back to full list", restaurants_path, class: "btn btn-primary"%>
<br>
<h1><%= @restaurant.name %></h1>
<h4><%= @restaurant.address %></h4>
<h4><%= @restaurant.phone_number %></h4>
<h4><%= @restaurant.category %></h4>
<br>
<h4>List of reviews:</h4>
<ul>
<% @restaurant.reviews.each do |review| %>
  <li><%= review.rating %></li>
  <li><%= review.content %></li>
  <br>
<% end %>
</ul>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_field :content, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :rating %>
    <%= f.text_field :rating, class: 'form-control' %>
  </div>

  <%= f.submit "add a review", class: "btn btn-primary" %>
<% end %>
